<h1>Add New Item <%="To #{@category.name}" if @category%></h1>

<%= form_for(@item) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %></br>
  
  <%= f.label :price %>
  <%= f.text_field :price %></br>
  
  <%= f.label :inventory %>
  <%= f.text_field :inventory %></br>
  
  <!--clean this up?-->
  <%= f.label :category %>
  <% if @category %>
    <p><%= @category.name %></p>
    <%= f.hidden_field :category_id, value: @category.id %></br>
  <% else %>
    <%= f.collection_select :category_id, Category.all, :id, :name %></br>
  <% end %>
  </br>
  <%= f.submit nil, class:"btn btn-primary" %>
  
<% end %>